<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with corner radius -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_8sdp" />
            <solid android:color="@color/shimmerColor" />
        </shape>
    </item>

    <!-- Elevation shadow -->
    <item android:right="@dimen/_2sdp" android:top="@dimen/_2sdp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/_8sdp" />
            <padding
                android:bottom="@dimen/_2sdp"
                android:left="@dimen/_2sdp"
                android:right="@dimen/_2sdp"
                android:top="@dimen/_2sdp" />
        </shape>
    </item>
</layer-list>
